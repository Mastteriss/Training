<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:padding="16dp">
        <Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:title="Тренировки по фитнесу"/>
        <EditText
            android:id="@+id/nameET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите название упражнения"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/sloganET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ваш девиз!"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/startButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Переход к тренировке" />

        <Button
            android:id="@+id/exitButtonBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exit" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:src="@drawable/fitnes"
        />






</LinearLayout>